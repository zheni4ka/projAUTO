@model AutoDto;

<div class="d-flex justify-content-center mt-5">
    <form asp-action="Edit" method="post" class="p-4 rounded shadow bg-white w-100" style="max-width: 700px;">

        <h2 class="text-center mb-4">Edit Car Details</h2>
        <hr />

        <div class="form-group row mb-3">
            <label asp-for="Mark" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Mark" class="form-control" placeholder="Enter the new mark for car" />
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Model" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Model" class="form-control" placeholder="Enter the new model for car" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Speed" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Speed" type="number" min="0" class="form-control" placeholder="Enter the new speed (km/h)" />
                <span asp-validation-for="Speed" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Price" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Price" type="number" min="0" class="form-control" placeholder="Enter the new price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="YearRelease" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="YearRelease" type="number" min="1886" max="@DateTime.Now.Year" class="form-control" placeholder="Enter the release year" />
                <span asp-validation-for="YearRelease" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Description" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter the new description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 offset-sm-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save me-1"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>

    </form>
</div>
